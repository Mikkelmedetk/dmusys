<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - DMUSys</title>
        @Styles.Render("~/Content/css")
        <link href="~/Content/formValidation.css" rel="stylesheet" />
    @Styles.Render("~/Content/dropzonescss")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>    
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datetime")
    
    @RenderSection("scripts", required: false)
    
    <script src="https://cdn.rawgit.com/nnattawat/flip/v1.0.19/dist/jquery.flip.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="http://ajax.googleapis.com/ajax/libs/jqueryui/1/themes/flick/jquery-ui.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jqueryui/1.8.12/jquery-ui.min.js" type="text/javascript" charset="utf-8"></script>
    <link href="~/Content/jquery.tagit.css" rel="stylesheet" />
    <script charset="utf-8" src="~/Scripts/tag-it.min.js"></script>
    <script src="~/Scripts/formValidation.js"></script>
    <script src="~/Scripts/framework/bootstrap.min.js"></script>

</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("DMU", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @{Html.RenderAction("getMenu", "Menu");}
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    @{ Html.RenderPartial("_Alerts"); }

        @RenderBody()
<br /><br /><br />


    @Scripts.Render("~/bundles/dropzonescripts")
<script>
    $(".navbar-fixed-top").autoHidingNavbar();


    </script>
</body>
</html>
